@model MedicosRX.Models.LoginDetail
@{
    ViewBag.Title = "CreateLogin";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class="pull-left">
                    <div class="page-title">Add Login User</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">LoginUser</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Add Login Users</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-head">
                        <header>Basic Information</header>
                        <button id="panel-button"
                                class="mdl-button mdl-js-button mdl-button--icon pull-right"
                                data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            data-mdl-for="panel-button">
                            <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                            <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                            <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                        </ul>
                    </div>
                    <div class="card-body" id="bar-parent">
                        @using (Html.BeginForm("CreateLogin", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        User Name
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.UserName, null, new { @placeholder = "Doctor Name", @class = "form-control input-height" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Password
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Password, null, new { @placeholder = "Email Id", @class = "form-control input-height" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Roles
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @*   @Html.DropDownListFor(Model=>Model.RoleId,(List<SelectListItem>)ViewBag.Roles)*@

                                        @Html.DropDownListFor(Model => Model.RoleId, new List<SelectListItem> {

                new SelectListItem{ Text="Admin", Value = "1" },
               new SelectListItem{ Text="Doctor", Value = "2" }
      }, "Select Role", new { @placeholder = "Description", @class = "form-control input-height" })


                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        User Type
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @*   @Html.DropDownListFor(Model=>Model.RoleId,(List<SelectListItem>)ViewBag.Roles)*@
                                        @Html.DropDownListFor(Model => Model.UserTypeId,(IEnumerable<SelectListItem>)ViewBag.UserTypeId, "Select User Type", new { @placeholder = "Description", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                       Email Id
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.EmailId, new { @placeholder = "EmailId", @class = "form-control input-height"  })  
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Account Status
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.CheckBoxFor(Model => Model.IsActive, new { @placeholder = "SpecialList" }) Active
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="offset-md-3 col-md-9">
                                            <input type="submit" class="btn btn-info m-r-20" value="Save" />
                                            <br />
                                            <h3 class="warning"> @ViewBag.Message</h3>
                                        </div>
                                    </div>
                                  @Html.ActionLink("Back", "ViewLogin", "Login", null, new { @class = "btn btn-success" })
                                </div>
                            </div>


                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
