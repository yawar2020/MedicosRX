@model MedicosRX.Models.Doctor
@{
    ViewBag.Title = "Edit Doctor Detail";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class="pull-left">
                    <div class="page-title">Edit Doctor</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Doctors</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Edit Doctor</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-head">
                        <header>Basic Information</header>
                        <button id="panel-button"
                                class="mdl-button mdl-js-button mdl-button--icon pull-right"
                                data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            data-mdl-for="panel-button">
                            <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                            <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                            <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                        </ul>
                    </div>
                    <div class="card-body" id="bar-parent">
                        @using (Html.BeginForm("EditDoctor", "Doctor", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(Model=>Model.DoctorId)
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Doctor Name
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Name, null, new { @placeholder = "Doctor Name", @class = "form-control input-height" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        EmailId
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.EmailId, null, new { @placeholder = "Email Id", @class = "form-control input-height" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Mobile
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Mobile, null, new { @placeholder = "Mobile", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        SpecialList
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Specialist, null, new { @placeholder = "SpecialList", @class = "form-control input-height" })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Qualification
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Qualification, null, new { @placeholder = "Qualification", @class = "form-control input-height" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Gender
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(Model => Model.Gender, new List<SelectListItem> {

                                            new SelectListItem{ Text="Male", Value = "Male" },
                                           new SelectListItem{ Text="Female", Value = "Female" }
                                  }, "Select Gender", new { @placeholder = "Description", @class = "form-control input-height" })


                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Date of Joining
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Date_of_joining, new { @placeholder = "Date of Joining", @class = "form-control input-height", @type = "date" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Consultation Timing
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Timing, new { @placeholder = "Consultation Time", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Address
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(Model => Model.Address, 5, 10, new { @placeholder = "Address", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="offset-md-3 col-md-9">
                                            <input type="submit" class="btn btn-info m-r-20" value="Update" />
                                            <br />
                                            <h3 class="warning"> @ViewBag.Message</h3>
                                        </div>
                                    </div>
                                    @Html.ActionLink("Back", "GetDoctor", "Doctor", null, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>