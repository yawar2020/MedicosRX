
@{
    ViewBag.Title = "CreateMedicineDetail";
}

@model MedicosRX.Models.sp_get_Medicine_Result


<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Add Medicine</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Medicine</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Add Medicine</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-head">
                        <header>Medicine Information</header>
                        <button id="panel-button"
                                class="mdl-button mdl-js-button mdl-button--icon pull-right"
                                data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            data-mdl-for="panel-button">
                            <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                            <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                            <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                        </ul>
                    </div>
                    <div class="card-body" id="bar-parent">
                        @using (Html.BeginForm("CreateMedicineDetail", "Medicine", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        DisseaseName
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(Model => Model.DiseasesId, (IEnumerable<SelectListItem>)ViewBag.Medicine, new { @placeholder = "Select Dissease", @class = "form-control input-height" })
                                    </div>
                                </div>



                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Medicine Name
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.MedicineName, new { @placeholder = "Medicine Name", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Formula
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(Model => Model.Formula, new { @placeholder = "Formula", @class = "form-control input-height" })
                                    </div>
                                </div><div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Indication
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(Model => Model.Comment, new { @placeholder = "Comment", @class = "form-control input-height" })
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="offset-md-3 col-md-9">
                                            <input type="submit" class="btn btn-info m-r-20" value="Save" />
                                            <br />
                                            <h3 class="warning"> @ViewBag.Message</h3>
                                        </div>
                                        @Html.ActionLink("Back", "GetMedicine", "Medicine", null, new { @class = "btn btn-success" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

